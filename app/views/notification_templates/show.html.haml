- model_class = NotificationTemplate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @notification_template.name
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @notification_template.body.html_safe


= link_to t('.back', :default => t("helpers.links.back")), notification_templates_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_template_path(@notification_template), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), notification_template_path(@notification_template), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
