- model_class = NotificationTemplate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:from)
      %th= model_class.human_attribute_name(:to)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @notification_templates.each do |notification_template|
      %tr
        %td= link_to notification_template.id, notification_template_path(notification_template)
        %td= notification_template.name
        %td= notification_template.from
        %td= notification_template.to
        %td=l notification_template.created_at
        %td
          = link_to t('.view', :default => t("helpers.link.view")), notification_template_path(notification_template), class: 'btn btn-default btn-xs', target: :blank
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_template_path(notification_template), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), notification_template_path(notification_template), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_notification_template_path, :class => 'btn btn-primary'
