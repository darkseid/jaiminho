- model_class = EmailTemplate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @email_template.name
%p
  %strong= model_class.human_attribute_name(:subject) + ':'
  %br
  = @email_template.subject
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @email_template.body.html_safe


= link_to t('.back', :default => t("helpers.links.back")), email_templates_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_email_template_path(@email_template), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), email_template_path(@email_template), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
